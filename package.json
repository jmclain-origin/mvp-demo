{
    "name": "mern-boilerplate",
    "version": "0.1.0",
    "license": "MIT",
    "scripts": {
        "start": "conc \"yarn start:client\" \"yarn start:server\"",
        "start:client": "webpack serve --config config/webpack.config.client.ts --port 3000 --mode development --open",
        "start:server": "webpack --config config/webpack.config.server.ts --watch --mode development",
        "build": "yarn build:client && yarn build:server",
        "build:client": "webpack --config config/webpack.config.client.ts --mode production",
        "build:server": "webpack --config config/webpack.config.server.ts --mode production",
        "lint": "eslint server client --ext .js,.jsx,.ts,.tsx",
        "prepare": "husky install",
        "test:server": "jest server/__tests__"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "yarn lint",
            "yarn prettier --write",
            "eslint client/src/*.ts server/src/*.ts --fix-dry-run"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "dependencies": {
        "@headlessui/react": "^1.7.13",
        "express": "^4.18.2",
        "heroicons-react": "^1.4.1",
        "module-alias": "^2.2.2",
        "mongoose": "^6.9.3",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "uuid": "^9.0.0"
    },
    "_moduleAliases": {
        "@global": ""
    },
    "devDependencies": {
        "@types/connect-livereload": "^0.6.0",
        "@types/dotenv-webpack": "^7.0.3",
        "@types/express": "^4.17.15",
        "@types/istanbul-lib-coverage": "^2.0.4",
        "@types/jest": "^29.2.5",
        "@types/livereload": "^0.9.2",
        "@types/node": "*",
        "@types/postcss-import": "^14.0.0",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "autoprefixer": "^10.4.13",
        "clean-webpack-plugin": "^4.0.0",
        "concurrently": "^7.6.0",
        "connect-livereload": "^0.6.1",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.3",
        "cssnano": "^5.1.14",
        "dotenv": "^16.0.3",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.31.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-webpack-plugin": "^3.2.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.3",
        "jest": "^29.3.1",
        "lint-staged": "^13.1.0",
        "livereload": "^0.9.3",
        "mini-css-extract-plugin": "^2.7.2",
        "mongodb-memory-server": "^8.12.0",
        "nodemon": "^2.0.20",
        "nodemon-webpack-plugin": "^4.8.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.0.9",
        "postcss-cli": "^10.1.0",
        "postcss-import": "^15.1.0",
        "postcss-loader": "^7.0.2",
        "prettier": "^2.8.1",
        "style-loader": "^3.3.1",
        "supertest": "^6.3.3",
        "svg-inline-loader": "^0.8.2",
        "tailwindcss": "^3.2.4",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1",
        "webpack-node-externals": "^3.0.0"
    }
}
